<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBF9FF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <!-- App Logo and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/koi_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="Koi Logo"
            android:src="@drawable/koi_logo" />

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="Koi Pond Paradise"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Koi Fish Image Banner -->
    <ImageView
        android:id="@+id/koi_image_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Koi Banner"
        android:scaleType="centerCrop"
        android:src="@drawable/koi_banner" />

    <!-- Section: Consultation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/koi_consultation_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Consultation"
            android:src="@drawable/icon_consult" />

        <TextView
            android:id="@+id/koi_consultation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Consult Feng Shui"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Section: Koi Articles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/koi_articles_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Articles"
            android:src="@drawable/icon_article" />

        <TextView
            android:id="@+id/koi_articles_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Read Koi Articles"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Section: Shop Koi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/koi_shop_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Shop"
            android:src="@drawable/icon_shop" />

        <TextView
            android:id="@+id/koi_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Shop Koi Fish"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Popular Koi Fish Title -->
    <TextView
        android:id="@+id/popular_koi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Popular Koi Fish"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Popular Koi Fish Grid -->
    <GridView
        android:id="@+id/koi_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="12dp"
        android:numColumns="2"
        android:verticalSpacing="12dp" />
</LinearLayout>
