<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black for shadow -->
        </shape>
    </item>

    <!-- Card Background -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- White card background -->
        </shape>
    </item>
</layer-list>